    metasploitable_config.vm.network "private_network", ip: "192.168.99.131", netmask: "255.255.255.0"
    metasploitable_config.vm.network "forwarded_port", guest: 80, host: 8080, host_ip: "127.0.0.1", auto_correct: true
  end

