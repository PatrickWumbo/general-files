  config.ssh.forward_x11 = "true"
 
  config.vm.define("kali") do |kali_config|
    kali_config.vm.box = "kali"
    kali_config.vm.guest = "debian"
    kali_config.vm.box_url = "https://ccdc:ccDC34UtpAgu@boxes.cs.ucr.edu/ccdc/kali/kali-2-amd64-virtualbox.box"
