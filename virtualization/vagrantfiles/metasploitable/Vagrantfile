    kali_config.vm.box_download_checksum_type = "md5"
    kali_config.vm.network "private_network", ip: "192.168.99.130", netmask: "255.255.255.0"
  end

  config.vm.define("metasploitable") do |metasploitable_config|
    metasploitable_config.vm.box = "metasploitable"
    metasploitable_config.vm.box_url = "https://ccdc:ccDC34UtpAgu@boxes.cs.ucr.edu/ccdc/metasploitable/metasploitable2-virtualbox.box"
